<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2500" />

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/tv_file_name_label">
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint android:id="@+id/tv_file_name">
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint android:id="@+id/tv_status_label">
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint android:id="@+id/tv_status">
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint android:id="@+id/mbt_details_ok">
            <PropertySet android:alpha="0.0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/tv_file_name_label">
            <PropertySet android:alpha="1.0" />
        </Constraint>

        <Constraint android:id="@id/tv_file_name">
            <PropertySet android:alpha="1.0" />
        </Constraint>

        <Constraint android:id="@id/tv_status_label">
            <PropertySet android:alpha="1.0" />
        </Constraint>

        <Constraint android:id="@id/tv_status">
            <PropertySet android:alpha="1.0" />
        </Constraint>

        <Constraint android:id="@id/mbt_details_ok">
            <PropertySet android:alpha="1.0" />
        </Constraint>
    </ConstraintSet>
</MotionScene>